{% extends 'base.html.twig' %}

{% block title %}Record{% endblock %}

{% block body %}
    <h1>Record</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ record.id }}</td>
            </tr>
            <tr>
                <th>RecordName</th>
                <td>{{ record.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ record.createdAt ? record.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ record.updatedAt ? record.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ArchivedAt</th>
                <td>{{ record.archivedAt ? record.archivedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('record_index') }}">back to list</a>

    <a href="{{ path('record_edit', {'id': record.id}) }}">edit</a>

    {{ include('record/_delete_form.html.twig') }}
{% endblock %}
